
<script>
    $(document).ready(function () {
        var tosend = "";
        
        var arr = ["sun","mon","tue","wed","thu","fri","sat"];

        for (var i = 0; i < arr.length ; ++i) {
            var toselect = "#" + arr[i];
            var day = arr[i];
            var count = 0;
            $(toselect).each(function () {
                var chkbox = $(this).find("input");
                while (count < 3) {
                    if (chkbox.is(":checked")) {
                        tosend += day + chkbox.attr('class') + ",1;";
                        count++;
                    } 
                    chkbox = $(chkbox).next();
                }
            });
        }
        
    });
</script>
