        <tr id="mon"><td>MON</td><td><input type="checkbox" class="am"></td><td><input type="checkbox" class="noon"></td><td><input type="checkbox" class="pm"></td></tr>
        <tr id="tue"><td>TUE</td><td><input type="checkbox" class="am"></td><td><input type="checkbox" class="noon"></td><td><input type="checkbox" class="pm"></td></tr>
        <tr id="wed"><td>WED</td><td><input type="checkbox" class="am"></td><td><input type="checkbox" class="noon"></td><td><input type="checkbox" class="pm"></td></tr>
