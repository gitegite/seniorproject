    @foreach (List<StudentCourse> courselist in Model)
    {
    <div class="firstChild" style="float:left;width:250px;margin-left:25px;margin-top:10px;-webkit-box-shadow: 1px 1px 1px 2px #DECFCE;box-shadow: 1px 1px 1px 2px #DECFCE;font-family:'Segoe UI', Times, serif;font-size:14px;">
        <div class="indexCounter" style="float:left;width:250px;font-size:20px;color:white;background-color:red">Plan @counter</div>
        @{count = 0;}
        @foreach (StudentCourse course in courselist)
        {
            foreach (StudentSection sec in course.Sections)
            {
                <div>
                <div style="float:left;width:10px;height:15px;background-color:@color[count];margin-top:12.5px;margin-left:5px;">
                </div>
                <div style="float:left;width:60px;margin-top:10px;margin-left:5px;"> @sec.CourseCode</div>
                <div style="float:left;width:165px;margin-top:10px;margin-left:5px;font-size:14px;"> @sec.CourseName</div>
                </div>
            }
            count += 1;
        }
        @{counter += 1;}

    <hr style="float:left;width:100%;border: 0;height: 1px;background-image: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0));margin-top:10px;" />
